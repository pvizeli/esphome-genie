// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "ESPHome Development",
	// Use official Python Alpine image
	"image": "mcr.microsoft.com/devcontainers/python:3.12-alpine",

	// Features to add to the dev container (Alpine-specific versions)
	"features": {
		"ghcr.io/cirolosapio/devcontainers-features/alpine-git:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-gh-cli:0": {}
	},

	// Install ESPHome and required dependencies after container creation
	"postCreateCommand": "pip install --no-cache-dir esphome && esphome version",

	// Configure tool-specific properties
	"customizations": {
		"vscode": {
			"extensions": [
				"esphome.esphome-vscode"
			]
		}
	}
}
